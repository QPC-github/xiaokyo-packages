{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "jsx": "react",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "target": "es5",
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "./src",
    "./typing.d.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}